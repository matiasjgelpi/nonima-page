---
import "@fontsource-variable/league-spartan";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import globoVerde from "../assets/globoVerde.png";
import globoVioleta from "../assets/globoVioleta.png";
---

<Layout title="nonima">
  <div class="container">
    <div class="globos-container">
      <Image class="green" src={globoVerde} alt="Globo verde" width={200} />
      <Image
        class="violet"
        src={globoVioleta}
        alt="Globo violeta"
        width={200}
      />
    </div>
    <p class="title">nonima</p>
    <p class="subtitule">Hablemos de cultura</p>
  </div>
</Layout>

<style lang="scss">
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
    flex-direction: column;

    .globos-container {
      position: relative;
      width: 300px;
      height: 300px;

      .green {
        transform: scaleX(-1);
        position: absolute;
        top: 55px;
        left: 0px;
        z-index: 2;
      }

      .violet {
        transform: scaleX(-1);
        position: absolute;
        bottom: 0;
        right: 0;
        z-index: 1;
      }
    }

    .title {
      font-size: 5rem;
      font-family: var(--heading-font);
      font-weight: 900;
      color: var(--black);
    }

    .subtitule {
      font-size: 1.5rem;
      font-family: var(--text-font);
      color: var(--green);
    }
  }
</style>
