---
import '@fontsource-variable/league-spartan';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import globoVerde from '../assets/images/globoVerde.png';
import globoVioleta from '../assets/images/globoVioleta.png';
import {
  title,
  subtitle,
  whatText,
  whyText,
} from '../assets/content/main-content.json';
---

<Layout title="nonima">
  <div class="container">
    <div class="logo">
      <div class="globos-container">
        <Image class="green" src={globoVerde} alt="Globo verde" width={200} />
        <Image
          class="violet"
          src={globoVioleta}
          alt="Globo violeta"
          width={200}
        />
      </div>
      <p class="title">{title}</p>
      <p class="subtitule">{subtitle}</p>
    </div>
    <div class="info">
      <p>{whatText}</p>
      <p>{whyText}</p>
    </div>
  </div>
</Layout>

<style lang="scss">
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
    font-family: var(--text-font);
    font-size: 1rem;
    background-color: var(--light-green);

    .logo {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;

      width: 50%;
      .globos-container {
        position: relative;
        width: 300px;
        height: 300px;

        .green {
          transform: scaleX(-1);
          position: absolute;
          top: 55px;
          left: 0px;
          z-index: 2;
          right: -100px;
        animation: slideIn 2s forwards;
        animation-iteration-count: 1;
        }

        .violet {
          transform: scaleX(-1);
          position: absolute;
          bottom: 0;
          right: 0;
          z-index: 1;
          right: -100px;
        animation: slideIn 2s forwards;
        animation-iteration-count: 1;
        }
      }

      .title {
        font-size: 5rem;
        font-family: var(--heading-font);
        font-weight: 900;
        color: var(--black);
      }

      .subtitule {
        font-size: 1.5rem;
        color: var(--violet);
        letter-spacing: 1rem;
        opacity: 0;
        position: relative;
        right: -100px;
        animation: slideIn 2s forwards;
        animation-iteration-count: 1;
      }

      @keyframes slideIn {
        0% {
          right: -100px;
          opacity: 0;
        }
        100% {
          right: 0;
          opacity: 1;
        }
      }
    }

    .info {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      width: 50%;
      font-weight: 600;
      padding: 2rem 10% 2rem 10%;
    }
  }
</style>
