---
import '@fontsource-variable/league-spartan';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import globoVerde from '../assets/images/globoVerde.png';
import globoVioleta from '../assets/images/globoVioleta.png';
import whatsapp from '../assets/images/Whatsapp.png';
import mail from '../assets/images/Mail.png';
import instagram from '../assets/images/Instagram.png';
import bioImage from '../assets/images/coty.jpg';

import {
  title,
  subtitle,
  whatText,
  whyText,
  authorBio,
} from '../assets/content/main-content.json';
import Copied from './Copied';
---

<Layout title="nonima">
  <div class="container">
    <section class="header">
      <div>
        <a href="https://wa.me/542235171352" target="_blank">
          <Image class="violet" src={whatsapp} alt="whatsapp icon" width={25} />
        </a>
      </div>
      <div>
        <a href="https://www.instagram.com/nonimamdq/" target="_blank">
          <Image
            class="violet"
            src={instagram}
            alt="instagram icon"
            width={25}
          />
        </a>
      </div>
      <div>
        <Copied client:load />
      </div>
    </section>

    <section class="content">
      <div class="logo">
        <div class="globos-container">
          <Image class="green" src={globoVerde} alt="Globo verde" width={250} />
          <Image
            class="violet"
            src={globoVioleta}
            alt="Globo violeta"
            width={250}
          />
        </div>
        <p class="title">{title}</p>
        <p class="subtitule">{subtitle}</p>
      </div>
      <div class="info">
        <p>{whatText}</p>
        <p>{whyText}</p>
      </div>
    </section>
    <section class="footer">
      <Image class="bio" src={bioImage} alt="imagen de biografÃ­a" width={150} />
      <p>{authorBio}</p>
    </section>
  </div>
</Layout>

<style lang="scss">
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    flex-grow: 1;

    .header {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      gap: 10px;
      padding: 10px 5%;
      background-color: var(--light-green);
      width: -webkit-fill-available;

      a {
        cursor: pointer;
      }
    }

    .content {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1rem;
      background-color: var(--lighter-green);
      flex-grow: 1;
      padding: 2% 5%;

      .logo {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 50%;
        .globos-container {
          position: relative;
          width: 350px;
          height: 200px;

          .green {
            transform: scaleX(-1);
            position: absolute;
            top: 0px;
            left: 0px;
            z-index: 2;
            right: -100px;
            animation: slideIn 2s forwards;
            animation-iteration-count: 1;
          }

          .violet {
            transform: scaleX(-1);
            position: absolute;
            bottom: 0;
            right: 0;
            z-index: 1;
            right: -100px;
            animation: slideIn 2s forwards;
            animation-iteration-count: 1;
          }
        }

        .title {
          font-size: 7rem;
          font-family: var(--heading-font);
          font-weight: 900;
          color: var(--black);
        }

        .subtitule {
          font-size: 2rem;
          color: var(--violet);
          letter-spacing: 0.7rem;
          opacity: 0;
          position: relative;
          right: -100px;
          animation: slideIn 2s forwards;
          animation-iteration-count: 1;
        }

        @keyframes slideIn {
          0% {
            right: -100px;
            opacity: 0;
          }
          100% {
            right: 0;
            opacity: 1;
          }
        }
      }

      .info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 50%;
        font-weight: 600;
        font-size: 1.3rem;
        padding: 2rem 5% 2rem 5%;
      }
    }

    .footer {
      padding: 0 5%;
      background-color: var(--light-green);
      display: flex;
      align-items: center;
      .bio {
        border-radius: 25%;
        object-fit: cover;
        height: 80%;
      }

      p {
        padding: 0 5%;
      }
    }
  }
</style>
