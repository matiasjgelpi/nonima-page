---
import '@fontsource-variable/league-spartan';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import globoVerde from '../assets/images/globoVerde.png';
import globoVioleta from '../assets/images/globoVioleta.png';
import whatsapp from '../assets/images/Whatsapp.png';
import mail from '../assets/images/Mail.png';
import instagram from '../assets/images/Instagram.png';
import bioImage from '../assets/images/coty.jpg';
import conversation from '../assets/images/conversation.svg';
import coffeConversation from '../assets/images/coffe_conversation.svg';

import {
  title,
  subtitle,
  whatText,
  whyText,
  authorBio,
  keyWords,
} from '../assets/content/main-content.json';
import Copied from './Copied';

let wordsToHighlight = [
  'escuchar',
  'experiencia',
  'debate',
  'pensamiento crítico',
  'desarrollo sociocultural',
];
---

<Layout title="nonima">
  <div class="container">
    <section class="header">
      <Copied client:load />
      <div class="social">
        <div>
          <a href="https://wa.me/542235171352" target="_blank">
            <Image
              class="violet"
              src={whatsapp}
              alt="whatsapp icon"
              width={16}
            />
          </a>
        </div>
        <div>
          <a href="https://www.instagram.com/nonimamdq/" target="_blank">
            <Image
              class="violet"
              src={instagram}
              alt="instagram icon"
              width={17}
            />
          </a>
        </div>
      </div>
    </section>

    <section class="content">
      <div class="up-bars-container">
        <div class="violet-bar"></div>
        <div class="green-bar"></div>
      </div>
      <div class="front-info">
        <div class="logo">
          <div class="globos-container">
            <Image
              class="green"
              src={globoVerde}
              alt="Globo verde"
              width={250}
            />
            <Image
              class="violet"
              src={globoVioleta}
              alt="Globo violeta"
              width={250}
            />
          </div>
          <p class="title">{title}</p>
          <p class="subtitule">{subtitle}</p>
        </div>
        <div class="info">
          <!-- {keyWords.map((keyWord) => <p>{keyWord}</p>)} -->
          <p>{whatText}</p>
          <!-- <Image src={coffeConversation} alt="chat ilustration" width={250} /> -->
          <p>{whyText}</p>
         
        </div>
      </div>

      <div class="down-bars-container">
        <div class="green-bar"></div>
        <div class="violet-bar"></div>
        <!-- <div class="green-bar"></div> -->
      </div>
    </section>
    <section class="footer">
      <Image class="bio" src={bioImage} alt="imagen de biografía" width={150} />
      <p>{authorBio}</p>
    </section>
  </div>
</Layout>

<style lang="scss">
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    flex-grow: 1;

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
      padding: 2px 5%;
      background-color: var(--light-green);
      width: -webkit-fill-available;

      a {
        cursor: pointer;
        height: fit-content;
      }

      .social {
        display: flex;
        justify-content: center;
        gap: 10px;
        > div {
          height: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
        }
      }
    }

    .content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      // align-items: center;
      font-size: 1rem;
      // background-color: var(--lighter-green);
      flex-grow: 1;
      width: 100%;
      gap: 1rem;

      .green-bar {
        background-color: var(--light-green);
        width: 100%;
        height: 10px;
        width: 50%;
        animation: slideIn 2s forwards;
        animation-iteration-count: 1;
      }

      .violet-bar {
        background-color: var(--light-violet);
        width: 100%;
        height: 20px;
      }

      .down-bars-container,
      .up-bars-container {
        display: flex;
        flex-direction: column;
        // justify-content: center;
        // align-items: center;
        width: 100%;
        gap: 10px;
      }

      .down-bars-container {
        // padding-bottom: 5px;
        .green-bar {
          &:first-child {
            margin-left: 50%;
          }
        }
      }

      .front-info {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 8%;
        gap: 10%;

        .logo {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          .globos-container {
            position: relative;
            width: 350px;
            height: 200px;

            .green {
              transform: scaleX(-1);
              position: absolute;
              top: 0px;
              left: 0px;
              z-index: 2;
              right: -100px;
              animation: slideIn 2s forwards;
              animation-iteration-count: 1;
            }

            .violet {
              transform: scaleX(-1);
              position: absolute;
              bottom: 0;
              right: 0;
              z-index: 1;
              right: -100px;
              animation: slideIn 2s forwards;
              animation-iteration-count: 1;
            }
          }

          .title {
            font-size: 7rem;
            font-family: var(--heading-font);
            font-weight: 900;
            color: var(--black);
          }

          .subtitule {
            font-size: 2rem;
            color: var(--violet);
            letter-spacing: 0.4rem;
            opacity: 0;
            position: relative;
            right: -100px;
            animation: slideIn 2s forwards;
            animation-iteration-count: 1;
          }
        }

        .info {
          display: flex;
          flex-direction: column;
          gap: 1rem;
          // font-weight: 600;
          // font-size: 1.3rem;
          // padding: 2rem 5% 2rem 5%;
          position: relative;
          p {
            text-transform: uppercase;
            // color: var(--violet);
            padding: 0 5px;
            &:hover {
              color: var(--green);
              border-radius: 5px;
              background-color: var(--lighter-violet);
            }
            right: -100px;
            animation: slideIn 2s forwards;
            animation-iteration-count: 1;
            // position: absolute;
          }
        }
      }

      @keyframes slideIn {
        0% {
          right: -100px;
          opacity: 0;
        }
        100% {
          right: 0;
          opacity: 1;
        }
      }
    }

    .footer {
      padding: 0 5%;
      background-color: var(--light-green);
      display: flex;
      align-items: center;
      .bio {
        border-radius: 25%;
        object-fit: cover;
        height: 80%;
      }

      p {
        padding: 0 5%;
      }
    }
  }
</style>
