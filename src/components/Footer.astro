---
import { Image } from "astro:assets";
import instagramImg from "../assets/images/Instagram.png";
import whatsappImg from "../assets/images/Whatsapp.png";
import mailImg from "../assets/images/Mail.png";
import Copied from "./Copied";
import Form from "./Form";

const content = {
  instagram: "https://www.instagram.com/nonimamdq/",
  whatsapp:
    "https://api.whatsapp.com/send?phone=542235171352&text=Hola Constanzas, soy",
  mail: "nonimamdq@gmail.com",
};

const { instagram, whatsapp, mail } = content;
---

<section
  id={"contact"}
  class="flex justify-between items-center bg-light-violet p-16 gap-6 font-bold"
>
  <div class="flex flex-col gap-4">
    <div class="flex items-center gap-2">
      <Image src={instagramImg} alt="icono de instagram" class="w-5 h-5" />
      <a href={instagram} target="_blank">instagram</a>
    </div>
    <div class="flex items-center gap-2">
      <Image src={whatsappImg} alt="icono de whatsapp" class="w-5 h-5" />
      <a href={whatsapp} target="_blank">whatsapp</a>
    </div>
    <div class="flex items-center gap-2">
      <Image src={mailImg} alt="icono de mail" class="w-5 h-5" />
      <Copied client:visible />
    </div>
  </div>
  <div class="w-1/3">
    <Form client:visible/>
  </div>
</section>
